{
  "image_url": "https://placehold.co/800x480/orange/white.png?text=Hello.",
  "display_type": "auto",
  "log_level": "INFO",
  "retry_attempts": 3,
  "retry_delay": 5,
  "image_cache_dir": "./cache",
  "log_file": "./logs/daily-photo.log",
  "buttons": {
    "refresh_button": {
      "gpio": 5,
      "label": "A",
      "action": "refresh_photo",
      "enabled": true
    },
    "button_b": {
      "gpio": 6,
      "label": "B",
      "action": "future_action",
      "enabled": false
    },
    "button_c": {
      "gpio": 16,
      "label": "C",
      "action": "future_action",
      "enabled": false
    },
    "button_d": {
      "gpio": 24,
      "label": "D",
      "action": "future_action",
      "enabled": false
    }
  },
  "button_debounce_delay": 0.5,
  "daily_photo_script": "./daily_photo.py"
}
